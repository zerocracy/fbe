    <area name="integration">
        <p>
            <name>eva_interval</name>
            <default>10</default>
            <type>int</type>
            <memo>Every X days to collect EVA statistics</memo>
        </p>
        <p>
            <name>eva_learn_hours</name>
            <default>8</default>
            <type>int</type>
            <memo>Every X hours to collect EVA numbers and learn the model using them</memo>
        </p>
    </area>
    <area name="quality">
        <p>
            <name>paranoia</name>
            <default>2</default>
            <type>int</type>
