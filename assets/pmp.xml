        <p>
            <name>love</name>
            <default>2</default>
            <type>int</type>
            <memo>The level of love</memo>
        </p>
        <p>
            <name>award_price</name>
            <default>0.0</default>
            <type>float</type>
            <memo>How many USD to pay for each award point</memo>
        </p>
        <p>
            <name>slaves</name>
            <default>torvalds</default>
            <type>string</type>
            <memo>List of people, who are not supposed to be paid real cash</memo>
        </p>
